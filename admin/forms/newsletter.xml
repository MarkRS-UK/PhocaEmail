<?xml version="1.0" encoding="utf-8"?>
<form>

	<fieldset addfieldpath="Phoca\Component\phocaemail\Field">

<field name="id" type="text" default="0" label="JGLOBAL_FIELD_ID_LABEL" required="true" readonly="true" class="readonly" />

<field name="title" type="text" class="inputbox" size="40" label="COM_PHOCAEMAIL_FIELD_TITLE_LABEL" description="COM_PHOCAEMAIL_FIELD_TITLE_DESC" required="true" />

<field name="alias" type="text" class="inputbox" size="40" label="COM_PHOCAEMAIL_FIELD_ALIAS_LABEL" description="COM_PHOCAEMAIL_FIELD_ALIAS_DESC" />

<field name="subject" type="text" class="inputbox" size="40" label="COM_PHOCAEMAIL_FIELD_SUBJECT_LABEL" description="COM_PHOCAEMAIL_FIELD_SUBJECT_DESC" required="true" />

<field name="url" type="text" class="inputbox" size="40" label="COM_PHOCAEMAIL_ARTICLE_LINK_LABEL" description="COM_PHOCAEMAIL_ARTICLE_LINK_DESC" />


<field name="ordering" type="PhocaEmailOrdering" table="newsletter" class="form-select" label="COM_PHOCAEMAIL_FIELD_ORDERING_LABEL" description="COM_PHOCAEMAIL_FIELD_ORDERING_DESC" />


<field name="message" type="editor" buttons="true" hide="pagebreak,readmore" class="inputbox" label="COM_PHOCAEMAIL_FIELD_MESSAGE_LABEL" filter="\Joomla\CMS\Component\ComponentHelper::filterText" description="COM_PHOCAEMAIL_FIELD_MESSAGE_DESC" />

<field name="message_html" type="editor" buttons="true" hide="pagebreak,readmore" class="inputbox" label="COM_PHOCAEMAIL_FIELD_MESSAGE_HTML_LABEL" filter="\Joomla\CMS\Component\ComponentHelper::filterText" description="COM_PHOCAEMAIL_FIELD_MESSAGE_HTML_DESC" />

<field name="mailinglist" type="phocaemailmailinglist" layout="joomla.form.field.list-fancy-select" multiple="true" default="" label="COM_PHOCAEMAIL_REGISTERED_MAILING_LIST_LABEL" description="COM_PHOCAEMAIL_REGISTERED_MAILING_LIST_DESC"/>

<field name="token" type="phocaemailtoken" manager="token" class="form-control inputbox" size="40" label="COM_PHOCAEMAIL_FIELD_TOKEN_LABEL" description="COM_PHOCAEMAIL_FIELD_TOKEN_DESC" />

	</fieldset>

	<fieldset name="publish" label="COM_PHOCAEMAIL_GROUP_LABEL_PUBLISHING_DETAILS" >

<field name="published" type="list" label="COM_PHOCAEMAIL_FIELD_PUBLISHED_LABEL" description="COM_PHOCAEMAIL_FIELD_PUBLISHED_DESC" class="inputbox" size="1" default="1">
	<option value="1">JPUBLISHED</option>
	<option	value="0">JUNPUBLISHED</option>
</field>

